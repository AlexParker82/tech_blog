<div class="main-post m-2">
    <header class="d-flex justify-content-between align-items-end">
        <h3>
            {{post.title}}
        </h3>
        <p class="p-2">Created by {{post.user.userName}} on {{format_date post.dateCreated}}</p>
    </header>
    <p class="p-3">
        {{post.content}}
    </p>
</div>
<form>
    <div class="mb-3">
        <label for="comment" class="form-label">Comment on this Post!</label>
        <input type="text" class="form-control" id="comment">
    </div>
    <button type="submit" class="btn btn-primary commentBtn">Comment</button>
</form>